{
	"compilerOptions": {
		"allowJs": true,
		"checkJs": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
		"module": "es2022",
		"moduleResolution": "bundler",
		"baseUrl": ".",
		"paths": {
			"$lib/*": ["src/lib/*"],
			"$lib": ["src/lib"]
		}
	}
}
